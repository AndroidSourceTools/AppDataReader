<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView style="@style/MyCardViewStyle"
        android:id="@+id/spinner_database_query_command_container">
        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_database_query_command">
        </android.support.v7.widget.AppCompatSpinner>
        </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:layout_below="@id/spinner_database_query_command_container"
        android:id="@+id/textview_update_query_table_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:layout_below="@id/spinner_database_query_command_container"
        android:id="@+id/textview_insert_query_table_name"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_database_table_columns"
        android:textAllCaps="false"
        android:gravity="left"
        android:textSize="16dp"
        android:layout_below="@id/textview_update_query_table_name"/>

    <android.support.v7.widget.CardView
        style="@style/MyCardViewStyle"
        android:id="@+id/textview_select_query_table_name_container"
        android:layout_below="@+id/button_database_table_columns">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="left|center_vertical"
            android:textStyle="normal"
            android:textColor="#000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAllCaps="false"
            android:id="@+id/textview_select_query_table_name"/>
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_select_query_table_name_container"
        android:id="@+id/query_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_clause"
        android:gravity="left"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:layout_below="@+id/query_text"
        android:text="SET " />


    <android.support.v7.widget.CardView
        style="@style/MyCardViewStyle"
        android:layout_below="@+id/set_clause">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_where_cause"
            android:gravity="left|center_vertical"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:text="Where Clause"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_below="@id/set_clause"/>
    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_values_cause"
        android:gravity="left"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:layout_below="@id/set_clause"/>

    <EditText
        android:id="@+id/com_awesomedroidapps_inappstoragereader_query_editText"
        style="@style/ComAwesomeDroidAppEditTextTheme"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_database_query_command"
        android:hint="@string/com_awesomedroidapps_inappstoragereader_query" />


</RelativeLayout>