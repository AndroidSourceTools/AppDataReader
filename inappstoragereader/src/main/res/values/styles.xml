<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="ComAwesomeDroidAppStorageReaderTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/com_awesomedroidapps_inappstoragereader_primary</item>
        <item name="colorPrimaryDark">
            @color/com_awesomedroidapps_inappstoragereader_color_primary_dark
        </item>
        <item name="colorAccent">@color/com_awesomedroidapps_inappstoragereader_color_accent</item>
    </style>

    <style name="ComAwesomeDroidAppEditTextTheme">
        <item name="backgroundTint">#000000</item>
    </style>

    <style name="ComAwesomeDroidAppsDataItemHeaderTextView" parent="@style/ComAwesomeDroidAppsDataItemTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="MyCardViewStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="ComAwesomeDroidAppsDataItemTextView" parent="android:Widget.TextView">
        <item name="android:textColor">
            @color/com_awesomedroidapps_inappstoragereader_blackColor
        </item>
        <item name="android:textSize">@dimen/com_awesomedroidapps_inappstoragereader_sharedpreferences_textview_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minHeight">
            @dimen/com_awesomedroidapps_inappstoragereader_shared_preference_item_min_height
        </item>
        <item name="android:padding">@dimen/com_awesomedroidapps_inappstoragereader_sharedpreference_item_padding</item>
    </style>

    <style name="ComAwesomeDroidQueryTextView" parent="BaseComAwesomeDroidQueryTextView">
    </style>

    <style name="BaseComAwesomeDroidQueryTextView" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ComAwesomeDroidQueryButtons"  parent="BaseComAwesomeDroidQueryButtons">
    </style>

    <style name="BaseComAwesomeDroidQueryButtons"  parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>